<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Broadcatreceiver"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_IP"
        style="@style/OnclickStyle"
        android:layout_marginTop="24dp"
        android:onClick="ipDialer"
        android:text="IP拨号器"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_Sms"
        style="@style/OnclickStyle"
        android:onClick="sms"
        android:text="短信监听"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_IP" />

    <TextView
        android:id="@+id/tv_Install"
        style="@style/NoOnclickStyle"
        android:text="安装与卸载"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Sms" />

    <TextView
        android:id="@+id/tv_Open"
        style="@style/NoOnclickStyle"
        android:text="开机启动"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Install" />

    <TextView
        android:id="@+id/tv_Send"
        style="@style/OnclickStyle"
        android:onClick="sendBroadcast"
        android:text="发送无序广播"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Open" />

    <TextView
        android:id="@+id/tv_SendOrder"
        style="@style/OnclickStyle"
        android:onClick="sendOrder"
        android:text="发送有序广播"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Send" />


    <TextView
        android:id="@+id/tv_Register"
        style="@style/OnclickStyle"
        android:onClick="register"
        android:text="动态注册"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_SendOrder" />
</android.support.constraint.ConstraintLayout>